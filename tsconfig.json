{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "types": ["@types/node", "vue"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "shims-vue.d.ts",
    "components/**/*.vue",
    "composables/**/*.ts",
    "pages/**/*.vue",
    "app.vue",
    "nuxt.config.ts"
  ]
}
